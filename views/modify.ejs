<%- include("include/header");%>
<main id="main">
  <div id="contents" class="section">
    <h2 class="title"><%= title %></h2>

    <form action="/modify" method="POST" id="join" class="formBox">
      <div class="inputBox">
        <label>
          <span class="label">ID</span>
          <input type="text" id="userID" name="userID" value="<%= userInfo.userID %>" readonly />
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">Password</span>
          <input type="password" id="userPW" name="userPW" placeholder="비밀번호를 입력하세요." />
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">Name</span>
          <input type="text" id="userName" name="userName" value="<%= userInfo.userName %>" placeholder="이름을 입력하세요." />
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">Email</span>
          <input type="text" id="userEmail" name="userEmail" value="<%= userInfo.userEmail %>" placeholder="이메일을 입력하세요." />
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">Address</span>
          <div>
            <div class="zipCodeBox">
              <input type="text" id="zipCode" name="zipCode" placeholder="우편번호" value="<%= userInfo.userZipcode %>" readonly /> <button id="btnZipCode">우편번호 찾기</button>
            </div>
            <input type="text" id="address01" name="address01" value="<%= userInfo.userAddress %>" />
            <input type="text" id="address02" name="address02" />
          </div>
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">성별</span>
          <div class="genderBox">
            <div><input type="radio" id="male" name="gender" value="남자" /><span>남자</span></div>
            <div><input type="radio" id="female" name="gender" value="여자" /><span>여자</span></div>
          </div>
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">직업</span>
          <select name="job" id="userJob">
            <option value="학생">학생</option>
            <option value="프로그래머">프로그래머</option>
            <option value="회사원">회사원</option>
            <option value="디자이너">디자이너</option>
            <option value="기획자">기획자</option>
          </select>
        </label>
      </div>
      <div class="formBtns">
        <button id="btnJoin">정보수정</button>
        <button type="reset" class="red"><a href="/">취소</a></button>
      </div>
    </form>
  </div>
</main>
<script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>
<script>
  let isIdChecked = false;
  $("#btnZipCode").on("click", () => {
    new daum.Postcode({
      oncomplete: function (data) {
        let roadAddr = data.roadAddress; // 도로명 주소 변수
        let extraRoadAddr = ""; // 참고 항목 변수

        $("#zipCode").val(data.zonecode);
        $("#address01").val(roadAddr);
      },
    }).open();
    return false;
    // form안에 있는 모든버튼은 submit역할을 해 버튼누르는 순간 다른페이지로 날아가는데 그것을방지하기위해 return false
  });

  $("#btnJoin").on("click", () => {
    if ($("#userPW").val().trim().length < 8) {
      alert("비밀번호는 최소 8자 이상이어야 합니다.");
      $("#userPW").focus();
      return false;
    } else if ($("#userName").val().trim().length < 2) {
      alert("이름은 최소 2자 이상이어야 합니다.");
      $("#userName").focus();
      return false;
    } else if ($("#userEmail").val().trim().length <= 0) {
      $("#userEmail").focus();
      return false;
    }
  });
</script>
<%- include("include/footer");%>
