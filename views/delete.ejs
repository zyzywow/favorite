<%- include("include/header"); %>
<main id="main">
  <div id="contents" class="section">
    <h2 class="title"><%= title %></h2>

    <form action="/delete" method="POST" id="join" class="formBox">
      <div class="inputBox">
        <label>
          <span class="label">Password</span>
          <input type="password" id="userPW" name="userPW" placeholder="password를 입력하세요" />
        </label>
      </div>

      <div class="formBtns">
        <button type="submit" data-value="10" id="btnJoin">회원탈퇴</button>
        <button type="reset" class="red"><a href="/">취소</a></button>
      </div>
    </form>
  </div>
</main>

<script>
  $("#btnJoin").on("click", () => {
    if ($("#userPW").val().trim().length <= 0) {
      alert("패스워드를 입력해 주세요.");
      $("#userPW").focus();
      return false;
    }
  });
</script>
<%- include("include/footer"); %>
